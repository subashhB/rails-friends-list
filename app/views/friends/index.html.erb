<p style="color: green">
  <%= notice %>
</p>


<div id="friends">
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>E-mail</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>User Id</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>

      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
        <tr>
          <td>
            <%= friend.first_name %>
          </td>
          <td>
            <%= friend.last_name %>
          </td>
          <td>
            <%= friend.email %>
          </td>
          <td>
            <%= friend.phone %>
          </td>
          <td>
            <%= friend.twitter %>
          </td>
          <td> 
            <%= friend.user.id %>
          </td>
          <td>
            <%= link_to "Show Details" , friend %>
          </td>
          <%= friend.inspect %>
        </tr>
        <% end %>
        <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New friend" , new_friend_path, class: "btn btn-secondary" %>